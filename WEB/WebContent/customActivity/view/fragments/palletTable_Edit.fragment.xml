<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <Dialog state="Warning" id="fragmentOnEdit" title="{/MATCODE}">
        <content>
            <form:SimpleForm editable="true" class="sapUiSmallMargin">
                <l:VerticalLayout class="sapUiContentPadding" width="100%">
                    <l:content>
                        <Label text="Koli Adet" tooltip=""/>
                        <Input id="value1" placeholder="Değer Giriniz." width="500px" fieldWidth="80px" class="sapUiSmallMarginBottom" type="Number"/>
                    </l:content>
                </l:VerticalLayout>
            </form:SimpleForm>
        </content>
        <buttons>
            <Button icon="sap-icon://save" text="Kaydet" press="onFragmentEditSave"/>
            <Button icon="sap-icon://sys-cancel" text="İptal" press="onFragmentEditCancel" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
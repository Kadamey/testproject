<mvc:View controllerName="customOrderScreen.controller.Main"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt" height="100%">
    <App id="app">
        <pages>
            <Page title="Sipariş Onay Ekranı" showHeader="false">
				<content>
                <tnt:ToolHeader>
                    <Image width="100px" src="data:image/png;base64,"></Image>
                    <FlexBox alignItems="Start" justifyContent="Center" width="100%" displayInline="Center">
                        <items>
                            <Text text="DM Sipariş Ekranı" wrapping="true" class="orderReleaseScreenHeaderColor"/>
                        </items>
                    </FlexBox>
                    <ToolbarSpacer/>
                    <Image width="100px" src="/XMII/CM/ECZ_MES-4.0/orderReleaseScreen/images/ecz.png"></Image>
                </tnt:ToolHeader>
                <HBox height="7%" width="97%" justifyContent="Start" alignItems="Start" class="sapUiTinyMargin">
                    <VBox>
                        <HBox justifyContent="Center" alignItems="Center" class="sapUiTinyMargin">
                            <Label width="50px" text="İş Yeri : " design="Bold" class="sapUiTinyMargin"/>
                            <ComboBox id="workCenterComboBox" textAlign="Center" items="{path: '/Rowsets/Rowset/Row'}" width="200px" change="onWorkCenterComboBoxChange" placeholder="İş Yeri Seçiniz..." fieldGroupIds="1">
                                <core:Item key="{WORK_CENTER}" text="{WORK_CENTER}"/>
                            </ComboBox>
                            <Button width="150px" text="Bobin Oluştur" icon="sap-icon://add" press="onPressCreateBobinButton" class="sapUiSmallMargin"/>
                            <Button width="150px" text="Tampon Yükleme" icon="sap-icon://add" press="onPressTamonLoadButton" class="sapUiSmallMargin"/>
                            <Button width="150px" text="Sipariş Başlat" icon="sap-icon://media-play" press="onPressOrderStartButton" class="sapUiSmallMargin"/>
                            <Button width="150px" text="Sipariş Durdur" icon="sap-icon://media-pause" press="onPressOrderFreezeButton" class="sapUiSmallMargin"/>
                            <Button width="160px" text="Bobin Listeleme" icon="sap-icon://bullet-text" press="onPressBobinListButton" class="sapUiSmallMargin"/>
                            <Button width="150px" text="Tamamla" icon="sap-icon://accept" press="onPressCompleteBobinButton" class="sapUiSmallMargin"/>
                            <Button width="175px" text="Sipariş Bilgi Formu" icon="sap-icon://form" press="onPressInfoOrderButton" class="sapUiSmallMargin"/>
                            <Button width="175px" text="Operatör Tamamla" press="onPressComplete" class="sapUiSmallMargin"/>
                        </HBox>
                    </VBox>
                </HBox>
				
              	<VBox class="sapUiSmallMargin" alignItems="Center" width="96%">
				   <ScrollContainer height='30rem' vertical='true'>
                                <Table id="idParentOrderTable" inset="true" items="{ path: '/Rowsets/Rowset/Row'}" sticky="ColumnHeaders" mode="SingleSelectMaster" selectionChange="onPressParentOrder" delete="onDeleteFromTable">
                                    <columns>
                                        <Column hAlign="Center">
                                            <Text text="Kombine Sipariş No"/>
                                        </Column>
                                        <Column hAlign="Center" width="150px">
                                            <Text text="Malzeme Tanımı"/>
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="DM Durumu"/>
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="DM Durumu"/>
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Toplam Tonaj"/>
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Üretilen Tonaj"/>
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Başlama Tarih/Saat"/>
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Bitiş Tarih/Saat"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Toplam Kalite Deşesi(kg)"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Toplam Diğer Deşesi(kg)"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Toplam Trim Deşesi(kg)"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Toplam Üretilen Tonaj(kg)"/>
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Açıklama"/>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem vAlign="Middle">
                                            <cells>
                                                <Text id="orderNoField" text="{PARENTSO}" wrapping="false"/>
                                                <Text id="materialDescField" text="{ITEM_DESCRIPTION}" wrapping="true"/>
                                                <Text id="orderStatusField" text="{STATUS}" wrapping="false"/>
                                                <core:Icon size="20px" src="{= ${STATUS} === 'NEW' ? 'sap-icon://status-inactive' : ${STATUS} === 'ACTIVE' ? 'sap-icon://status-positive' : ${STATUS} === 'FREEZE' ? 'sap-icon://status-in-process' : ${STATUS} === 'DONE' ? 'sap-icon://status-completed': ''}" color="{= ${STATUS} === 'NEW' ? '#C6C0C0' : ${STATUS} === 'ACTIVE' ? '#0ED145' : ${STATUS} === 'FREEZE' ? '#1075CF' : ${STATUS} === 'DONE' ? '#CA3523' : ''}" press="onDeleteRow" visible="true"/>
                                                <Text id="originalQuantityFieldId" text="{QTY}" wrapping="false"/>
                                                <Text id="producedQuantityField" text="" wrapping="false"/>
                                                <Text id="startTimeField" text="" wrapping="false"/>
                                                <Text id="endTiemField" text="" wrapping="false"/>
                                                <Text id="chieldTotalQScraptField" text="{NC_GROUP001}" wrapping="false"/>
                                                <Text id="chieldTotalOtheScraptField" text="{NC_GROUP002}" wrapping="false"/>
                                                <Text id="chieldTotalTrimScraptField1" text="{NC_GROUP003}" wrapping="false"/>
                                                <Text id="chieldtotalProductField" text="{NC_GROUP002}" wrapping="false"/>
                                                <Text id="commentField" text="" wrapping="false"/>
                                                <Button type="Transparent" icon="sap-icon://edit" press="onEditDecision"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
								</ScrollContainer>
                           	</VBox>
                      	<VBox class="sapUiSmallMargin" alignItems="Center" width="96%">
						  <ScrollContainer height='20rem' vertical='true'>
                                <Table id="idChildOrderTable" inset="true" items="{ path: '/Rowsets/Rowset/Row'}" sticky="ColumnHeaders" delete="onDeleteFromTable" mode="Delete">
                                    <columns>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Sipariş No"/>
                                        </Column>
                                        <Column hAlign="Center" width="150px">
                                            <Text text="Malzeme Kodu"/>
                                        </Column>
                                        <Column hAlign="Center" width="150px">
                                            <Text text="Malzeme Adı"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Adet"/>
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Ebat"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Kat Adeti"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Toplam Tonaj"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Üretilen Tonaj"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Vard. Ürt. Bobin (Adet)"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Toplam Ürt. Tonaj(kg)"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Vard. Toplam Ürt. Tonaj(kg)"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Toplam Kalite Deşesi (kg)"/>
                                        </Column>
                                        <Column hAlign="Center" width="auto">
                                            <Text text="Toplam Trim Deşesi(kg)"/>
                                        </Column>
                                    </columns>
                                    <items>
                                        <ColumnListItem vAlign="Middle">
                                            <cells>
                                                <Text id="childOrderNoField" text="{CHILDSO}" wrapping="false"/>
                                                <Text id="childMaterialNrField" text="{CHILDITEMNR}" wrapping="true"/>
                                                <Text id="childMaterialDescField" text="{CHILDITEMDESC}" wrapping="true"/>
                                                <Text id="childQuantityField" text="{CHILDTAKIMBOBINADET}" wrapping="false"/>
                                                <Text id="childEbatField" text="{CHILDEBAT}" wrapping="false"/>
                                                <Text id="childKatAdetField" text="{CHILDKATADET}" wrapping="false"/>
                                                <Text id="childTargetQuantityField" text="{CHILDQTY}" wrapping="false"/>
                                                <Text id="childQuantityProdField" text="{CHILDQTY}" wrapping="false"/>
                                                <Text id="childProducedQuantityField" text="{CHILDSO1}" wrapping="false"/>
                                                <Text id="childProducedWeightField" text="{CHILDSFC1}" wrapping="false"/>
                                                <Text id="childShiftProducedField" text="{ITEM}" wrapping="false"/>
                                                <Text id="chieldTotalQualityScraptField" text="{NC_GROUP001}" wrapping="false"/>
                                                <Text id="chieldTotalTrimScraptField" text="{NC_GROUP003}" wrapping="false"/>
                                                <Button type="Transparent" icon="sap-icon://edit" press="onEditDecision"/>
                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
									</ScrollContainer>
                        	</VBox>
				</content>
            </Page>
        </pages>
    </App>
</mvc:View>
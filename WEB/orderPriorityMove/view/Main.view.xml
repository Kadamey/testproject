						<Input width="250px" type="Number" id="idInput" liveChange="onFormatInput" class="sapUiLargeMarginTop" textAlign="Center"/>
						<Button width="250px" text="Sisteme Kaydet" type="Accept" press="onPressSave" id="idButton" class="sapUiSmallMarginTop"/>
					</VBox>
				</content>
			</Page>
		</pages>

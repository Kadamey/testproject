<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.commons" xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:ui="sap.ui.table" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified" xmlns:tnt="sap.tnt"
	height="100%" controllerName="orderReleaseScreen.controller.Main">
	<App id="app">
		<pages>
			<Page title="Sipariş Onay Ekranı" showHeader="false">
				<content>
					<tnt:ToolHeader>
						<Image width="100px"
							src="data:image/png;base64,"></Image>
						<FlexBox alignItems="Center" justifyContent="Start" width="auto" displayInline="Center">
							<Label width="50px" text="İş Yeri : " design="Bold" class="sapUiTinyMargin"/>
							<ComboBox id="workCenterComboBox" textAlign="Center" items="{path: '/Rowsets/Rowset/Row'}" width="250px" change=""
								placeholder="İş Yeri Seçiniz..." fieldGroupIds="1">
								<core:Item key="{WORK_CENTER}" text="{WORK_CENTER}"/>
							</ComboBox>
						</FlexBox>
						<FlexBox alignItems="Start" justifyContent="Center" width="100%" displayInline="Center">
							<items>
								<Text text="Sipariş Onay Ekranı" wrapping="true" class="orderReleaseScreenHeaderColor"/>
							</items>
						</FlexBox>
						<ToolbarSpacer/>
						<Image width="100px" src="/XMII/CM/ECZ_MES-4.0/orderReleaseScreen/images/ecz.png"></Image>
					</tnt:ToolHeader>
					<VBox height="7%" width="98%" justifyContent="Start" alignItems="Start" class="sapUiTinyMargin">
						<HBox width="100%" justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMargin">
							<HBox width="auto" justifyContent="Start" alignItems="Center">
								<Button id="idOrderDetailsButton" text="Sipariş Detay" icon="sap-icon://add" press="onPressOrderDetails" class="sapUiTinyMargin"
									visible="true"/>
								<Label text="Tüm Siparişler:" design="Bold" class="sapUiTinyMargin"/>
								<CheckBox id="idCheckBoxAllOrder" selected="false" select="onSelectAllOrderCheckBox" class="sapUiTinyMargin"/>
							</HBox>
							<HBox width="auto" justifyContent="SpaceBetween" alignItems="Center" class="sapUiTinyMargin">
								<Button id="idOrderReleaseButton" type="Accept" text="Sipariş Onay" icon="sap-icon://accept" press="onPressReleaseButton"
									class="sapUiTinyMargin" visible="true"/>
								<Button id="searchOrdersButtonId" text="ARA" icon="sap-icon://search" press="onPressFilterButton" class="sapUiTinyMargin" visible="true"/>
								<Label id="labelMaterial" text="Malzeme:" design="Bold" class="sapUiTinyMargin" visible="false"/>
								<ComboBox id="materialComboBox" textAlign="Center" items="{path: '/Rowsets/Rowset/Row'}" change="onChangeMaterialComboBox"
									placeholder="Malzeme..." fieldGroupIds="1" visible="false" class="sapUiTinyMargin">
									<core:Item key="{ITEM}" text="{ITEM}-{DESCRIPTION}"/>
								</ComboBox>
								<Label id="labelDTP1" width="130px" text="Başlangıç Zamanı : " design="Bold" class="sapUiTinyMargin" visible="false"/>
								<DateTimePicker id="DTP1" displayFormat="short" placeholder="Başlangıç Zamanı Giriniz..." visible="false" class="sapUiTinyMargin"/>
								<Label id="labelDTP2" width="95px" text="Bitiş Zamanı : " design="Bold" class="sapUiTinyMargin" visible="false"/>
								<DateTimePicker id="DTP2" displayFormat="short" placeholder="Bitiş Zamanı Giriniz..." visible="false" class="sapUiTinyMargin"/>
								<Button id="searchAllOrdersButton" text="ARA" icon="sap-icon://search" press="onPressOrderSearchButton" class="sapUiTinyMargin"
									visible="false"/></HBox>
						</HBox>
					</VBox>
					<VBox class="sapUiSmallMargin" alignItems="Center" width="96%">
						<ui:Table id="orderReleasedTable1" rows="{/Rowsets/Rowset/Row}" rowSelectionChange="onOrdersTableSelectionChange" alternateRowColors="true"
							selectionMode="Single" selectionBehavior="RowOnly" columnHeaderHeight="50px" rowHeight="50px" visibleRowCountMode="Auto">
							<ui:extension>
								<OverflowToolbar>
									<Label id="title1" text="KM Sipariş Onay Listesi" design="Bold" class="sapUiSmallMarginBegin TableText"/>
								</OverflowToolbar>
							</ui:extension>
							<ui:columns>
								<ui:Column hAlign="Center" sortProperty="AUFNR" filterProperty="AUFNR" filterType="sap.ui.model.type.String"
									class="orderReleaseScreenRowColor">
									<Label text="Sipariş No" design="Bold"/>
									<ui:template>
										<Text text="{SHOP_ORDER}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="MATNR" filterProperty="MATNR" filterType="sap.ui.model.type.String">
									<Label text="Malzeme No" design="Bold"/>
									<ui:template>
										<Text text="{ITEM}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="MAKTX" filterProperty="MAKTX" filterType="sap.ui.model.type.String">
									<Label text="Malzeme Tanımı" design="Bold"/>
									<ui:template>
										<Text text="{ITEM_DESCRIPTION}" wrapping="true"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="AUFNR" filterProperty="AUFNR" filterType="sap.ui.model.type.String">
									<Label text="Hedef Miktar" design="Bold"/>
									<ui:template>
										<Text text="{QTY_ORDERED}" wrapping="false" class="orderReleaseScreenRowColor"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="CREATION_TIMESTAMP" filterProperty="CREATION_TIMESTAMP" filterType="sap.ui.model.type.Date">
									<Label text="ERP Planlanan Baslangıç" design="Bold"/>
									<ui:template>
										<Text text="{PLANNED_START_DATE}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="CREATION_TIMESTAMP" filterProperty="CREATION_TIMESTAMP" filterType="sap.ui.model.type.Date">
									<Label text="ERP Planlanan Bitiş" design="Bold"/>
									<ui:template>
										<Text text="{PLANNED_COMP_DATE}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="CREATION_TIMESTAMP" filterProperty="CREATION_TIMESTAMP" filterType="sap.ui.model.type.Date">
									<Label text="Sıra No" design="Bold"/>
									<ui:template>
										<Text text="{PRIORITY}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="NAME" filterProperty="NAME" filterType="sap.ui.model.type.String">
									<Label text="İş Yeri" design="Bold"/>
									<ui:template>
										<Text text="{WORK_CENTER}" wrapping="false"/>
									</ui:template>
								</ui:Column>
							</ui:columns>
						</ui:Table>
					</VBox>
					<VBox class="sapUiSmallMargin" alignItems="Center" width="96%">
						<ui:Table id="orderReleasedTable2" rows="{/Rowsets/Rowset/Row}" rowSelectionChange="" alternateRowColors="true"
							selectionMode="Single" selectionBehavior="RowOnly" columnHeaderHeight="50px" rowHeight="50px" visibleRowCountMode="Auto">
							<ui:extension>
								<OverflowToolbar>
									<Label id="title2" text="DM Sipariş Onay Listesi" design="Bold" class="sapUiSmallMarginBegin TableText"/>
								</OverflowToolbar>
							</ui:extension>
							<ui:columns>
								<ui:Column hAlign="Center" sortProperty="AUFNR" filterProperty="AUFNR" filterType="sap.ui.model.type.String">
									<Label text="Sipariş No" design="Bold"/>
									<ui:template>
										<Text text="{SHOP_ORDER}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="MATNR" filterProperty="MATNR" filterType="sap.ui.model.type.String">
									<Label text="Malzeme No" design="Bold"/>
									<ui:template>
										<Text text="{ITEM}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="MAKTX" filterProperty="MAKTX" filterType="sap.ui.model.type.String">
									<Label text="Malzeme Tanımı" design="Bold"/>
									<ui:template>
										<Text text="{ITEM_DESCRIPTION}" wrapping="true"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="AUFNR" filterProperty="AUFNR" filterType="sap.ui.model.type.String">
									<Label text="Hedef Miktar" design="Bold"/>
									<ui:template>
										<Text text="{QTY_ORDERED}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="CREATION_TIMESTAMP" filterProperty="CREATION_TIMESTAMP" filterType="sap.ui.model.type.Date">
									<Label text="ERP Planlanan Baslangıç" design="Bold"/>
									<ui:template>
										<Text text="{PLANNED_START_DATE}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="CREATION_TIMESTAMP" filterProperty="CREATION_TIMESTAMP" filterType="sap.ui.model.type.Date">
									<Label text="ERP Planlanan Bitiş" design="Bold"/>
									<ui:template>
										<Text text="{PLANNED_COMP_DATE}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="NAME" filterProperty="NAME" filterType="sap.ui.model.type.String">
									<Label text="Ebat (cm)" design="Bold"/>
									<ui:template>
										<Text text="" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="NAME" filterProperty="NAME" filterType="sap.ui.model.type.String">
									<Label text="MB Çapı (mm)" design="Bold"/>
									<ui:template>
										<Text text="" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="NAME" filterProperty="NAME" filterType="sap.ui.model.type.String">
									<Label text="Kat Sayısı" design="Bold"/>
									<ui:template>
										<Text text="" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="NAME" filterProperty="NAME" filterType="sap.ui.model.type.String">
									<Label text="Bobin Çapı" design="Bold"/>
									<ui:template>
										<Text text="" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="NAME" filterProperty="NAME" filterType="sap.ui.model.type.String">
									<Label text="İş Yeri" design="Bold"/>
									<ui:template>
										<Text text="{WORK_CENTER}" wrapping="false"/>
									</ui:template>
								</ui:Column>
								<ui:Column hAlign="Center" sortProperty="CREATION_TIMESTAMP" filterProperty="CREATION_TIMESTAMP" filterType="sap.ui.model.type.Date">
									<Label text="Sıra No" design="Bold"/>
									<ui:template>
										<Text text="{PRIORITY}" wrapping="false"/>
									</ui:template>
								</ui:Column>
							</ui:columns>
						</ui:Table>
					</VBox>
				</content>
				<footer>
					<OverflowToolbar>
						<!--  <Button width="150px" text="Sipariş Detay" icon="sap-icon://add" press="onPressOrderDetailButton" class="sapUiSmallMargin"/> 
						<ToolbarSpacer/> -->
						<!-- <Button width="150px" text="Sipariş Detay" icon="sap-icon://add" press="onPressOrderDetails" class="sapUiSmallMargin"/> -->
						<ToolbarSpacer/>
						<!-- <Button width="150px" type="Accept" text="Sipariş Onay" icon="sap-icon://accept" press="onPressReleaseButton" class="sapUiSmallMargin"/> -->
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>
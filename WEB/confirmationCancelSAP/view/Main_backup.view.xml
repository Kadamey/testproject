<mvc:View controllerName="confirmationCancelSAP.controller.Main"
    xmlns:l="sap.ui.layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt" height="100%">
    <tnt:ToolHeader>
        <Image width="100px" src="data:image/png;base64,"></Image>
        <FlexBox alignItems="Start" justifyContent="Center" width="100%" displayInline="Center">
            <items>
                <Text text="Teyit İptal" wrapping="true" class="orderReleaseScreenHeaderColor"/>
            </items>
        </FlexBox>
        <ToolbarSpacer/>
        <Image width="100px" src="/XMII/CM/ECZ_MES-4.0/orderReleaseScreen/images/ecz.png"></Image>
    </tnt:ToolHeader>


    <App id="app">
        <pages>
            <Page title="Sipariş Onay Ekranı" showHeader="false">

                <HBox height="7%" width="97%" justifyContent="Start" alignItems="Start" class="sapUiTinyMargin">
                    <VBox>
                        <HBox justifyContent="Center" alignItems="Center" class="sapUiTinyMargin">
                            <Label width="50px" text="İş Yeri : " design="Bold" class="sapUiTinyMargin"/>
                            <ComboBox id="workCenterComboBox" textAlign="Center" items="{path: '/Rowsets/Rowset/Row'}" width="200px" change="onWorkCenterComboBoxChange" placeholder="İş Yeri Seçiniz..." fieldGroupIds="1">
                                <core:Item key="{WORK_CENTER}" text="{WORK_CENTER}"/>
                            </ComboBox>
                          <Button id="confEditButton" width="150px" text="Teyit Düzenle" icon="sap-icon://add" press="onPressConfEditButton" class="sapUiSmallMargin"/>
                            <Button id="confEditCancelButton" width="150px" text="Düzenle İptal" icon="sap-icon://add" press="onPressConfEditCancelButton" class="sapUiSmallMargin" visible ="false"/>
                            <Button id="confSaveButton" width="150px" text="Teyit Kaydet" icon="sap-icon://add" press="onPressConfEditSaveButton" class="sapUiSmallMargin" visible ="false"/>
                            <ToolbarSpacer/>
                                 <VBox>
                            <Button width="150px" text="Teyit Sil" icon="sap-icon://add" press="onPressConfDeleteButton" class="sapUiSmallMargin"/>
                             </VBox>

                        </HBox>

                    </VBox>
                </HBox>
                <l:ResponsiveSplitter defaultPane="default">
                    <l:PaneContainer>

                        <l:PaneContainer orientation="Vertical">
                            <l:SplitPane requiredParentWidth="600">
                                <Panel headerText="Sipariş Header Info">
                                    <Table id="idOrderHeaderTable" inset="true" items="{	path: '/Rowsets/Rowset/Row'}" sticky="ColumnHeaders" mode="SingleSelectMaster" selectionChange="onPressOrderHeaderTable" delete="onDeleteFromTable">

                                        <columns>
                                            <Column hAlign="Center">
                                                <Text text="Sipariş No" />
                                            </Column>


                                            <Column hAlign="Center" width="150px">
                                                <Text text="İş Yeri" />
                                            </Column>

                                            <Column hAlign="Center">
                                                <Text text="Teyit Tarihi" />
                                            </Column>
                                            <Column hAlign="Center">
                                                <Text text="Kullanıcı" />
                                            </Column>
                                            <Column hAlign="Center">
                                                <Text text="ME Teyit Sayacı" />
                                            </Column>
                                             <Column hAlign="Center">
                                                <Text text="İptal Statüsü" />
                                            </Column>


                                        </columns>
                                        <items>
                                            <ColumnListItem vAlign="Middle">
                                                <cells>
                                                    <Text id="orderNoFieldHeader" text="{ORDERID}" wrapping="false" />


                                                    <Text id="workCenterFieldHeader" text="{WORK_CENTER}" wrapping="true" />
                                                    <Text id="confTimeHEader" text="{CONF_TIME}" wrapping="false" />
                                                    
                                                    <Text id="confUserHeader" text="{CONF_USER}" wrapping="false" />
                                                    <Text id="meConfCounterHeader" text="{ME_CONF_COUNT}" wrapping="false" />
                                                     <Text id="confCancelStatus" text="{CANCEL_STATUS}" wrapping="false" />

                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </Panel>
                            </l:SplitPane>
                            <l:SplitPane requiredParentWidth="800">
                                <Page title="Teyit ve Aktivite">

                                    <Table id="idOrderTimeTicketsTable" inset="true" items="{	path: '/'}" sticky="ColumnHeaders" mode="SingleSelectMaster" selectionChange="onPressParentOrder" delete="onDeleteFromTable">

                                        <columns>
                                            <Column hAlign="Center">
                                                <Text text="Sipariş No" />
                                            </Column>
                                            <Column hAlign="Center">
                                                <Text text="Teyit Miktarı" />
                                            </Column>
                                            <Column hAlign="Center">
                                                <Text text="Ölçü Birimi" />
                                            </Column>


                                            <Column hAlign="Center" width="150px">
                                                <Text text="ERP OPerasyon No" />
                                            </Column>

                                            <Column hAlign="Center">
                                                <Text text="ERP Teyit Tarihi" />
                                            </Column>
                                            <Column hAlign="Center">
                                                <Text text="ME Teyit Sayacı" />
                                            </Column>




                                        </columns>
                                        <items>
                                            <ColumnListItem vAlign="Middle">
                                                <cells>
                                                    <Text id="orderNoFieldTimeTicket" text="{OREDERID}" wrapping="false" />


                                                    <Text id="confQuantitiyTimeTicket" text="{YIELD}" wrapping="true" />
                                                    <Text id="unitOfMeasureTimeTicket" text="{CONF_QUAN_UNIT}" wrapping="false" />

                                                    <Text id="erpOperationNoTimeTicket" text="{OPERATION}" wrapping="false" />

                                                    <Text id="erpConfDateTimeTicket" text="{POSTG_DATE}" wrapping="false" />
                                                    <Text id="meConfCounterTimeTicket" text="{ME_CONF_COUNT}" wrapping="false" />


                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                    
                                </Page>
                            </l:SplitPane>
                        </l:PaneContainer>
                        <l:SplitPane requiredParentWidth="400" id="default">
                            <Panel headerText="Mal Hareketleri" height="100%">
                                <Table id="idGoodsMovementTable" inset="true" items="{	path: '/GoodsMovements/Rowsets/Rowset/Row'}" sticky="ColumnHeaders" mode="SingleSelectMaster" selectionChange="onPressParentOrder" delete="onDeleteFromTable">

                                    <columns>
                                        <Column hAlign="Center">
                                            <Text text="Sipariş No" />
                                        </Column>


                                        <Column hAlign="Center" width="150px">
                                            <Text text="Malzeme" />
                                        </Column>
                                         <Column hAlign="Center" width="150px">
                                            <Text text="Malzeme Tanimi" />
                                        </Column>

                                        <Column hAlign="Center" width="150px">
                                            <Text text="Parti" />
                                        </Column>


                                        <Column hAlign="Center">
                                            <Text text="Depo Yeri" />
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Hareket Tipi" />
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Miktar" />
                                        </Column>

                                        <Column hAlign="Center">
                                            <Text text="Ölçü Birimi" />
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Rezervasyon No" />
                                        </Column>
                                        <Column hAlign="Center">
                                            <Text text="Rezervasyon Item" />
                                        </Column>


                                    </columns>
                                    <items>
                                        <ColumnListItem vAlign="Middle">
                                            <cells>
                                                <Text id="orderNoFieldGoodsMvt" text="{ORDERID}" wrapping="false" />
                                                 <Text id="materialFieldGoodsMvt" text="{ITEM}" wrapping="true" />

                                                <Text id="materialDescFieldGoodsMvt" text="{ITEM_DESCRIPTION}" wrapping="true" />
                                                <Text id="batchNoFieldGoodsMvt" text="{BATCH}" wrapping="false" />

                                                <Text id="storageLocationFieldGoodsMvt" text="{STGE_LOC}" wrapping="false" />
                                                <Text id="moveTypeFieldGoodsMvt" text="{MOVE_TYPE}" wrapping="false" />
                                                <Input id="quantityFieldGoodsMvt" value="{ENTRY_QNT}" wrapping="false" editable="{EDITABLE}"/>

                                                 <Text id="unitOfMeasureFieldGoodsMvt" text="{ENTRY_UOM}" wrapping="true" />
                                                <Text id="reservationNoFieldGoodsMvt" text="{RESERV_NO}" wrapping="false" />

                                                <Text id="reservationItemFieldGoodsMvt" text="{RESERV_ITEM}" wrapping="false" />
                                             

                                            </cells>
                                        </ColumnListItem>
                                    </items>
                                </Table>
                            </Panel>
                        </l:SplitPane>

                    </l:PaneContainer>
                </l:ResponsiveSplitter>
            
            </Page>
        </pages>

    </App>

</mvc:View>